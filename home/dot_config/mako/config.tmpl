# See man 5 mako

font={{ .font.family }} 9
width=400
height=200
padding=20
margin=20
border-size=3
border-radius=10
default-timeout=1500

{{- with get . .colorscheme }}
text-color={{ .fg }}
background-color={{ .bg }}
{{- end }}

{{- if eq .colorscheme "dracula" }}
{{- with get . .colorscheme }}
border-color={{ .purple }}
{{- end }}
{{- else }}
{{- with get . .colorscheme }}
border-color={{ .blue }}
{{- end }}
{{- end }}
[mode=do-not-disturb]
invisible=1
