#!/bin/bash
command_exists() {
  command -v "$@" >/dev/null 2>&1
}

if ! command_exists pamac; then
  sudo pacman -Syu pamac-cli
fi

pamac install --no-confirm
{{- range .packages.linux.pamac }} {{ . | quote }}{{ end }}

snap install
{{- range .packages.linux.snap }} {{ . | quote }}{{ end }}

flatpak install
{{- range .packages.linux.flatpak }} {{ . | quote }}{{ end }}
