import = ["~/.config/alacritty/themes/tokyonight_moon.toml"]
shell = {{ .shell | quote }}
[env]
TERM_PROGRAM = "alacritty"
[window]
# "Full" | "None"
decorations = "None"
# "Windowed" | "Maximized" | "Fullscreen"
startup_mode = "Maximized"
decorations_theme_variant = "Dark"
opacity = 0.5

[font]
normal.family = {{ .font.family | quote }}
size = {{ .font.size }}
